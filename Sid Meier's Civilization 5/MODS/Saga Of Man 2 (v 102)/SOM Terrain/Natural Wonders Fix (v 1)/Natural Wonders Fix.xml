<GameData>
		<!-- All natural wonders now give a happiness bonus when within your borders.
		 Most give a standard value of 2.  The Reef is two tiles and gives 1 per tile. -->
		<Features>
			<Update>
				<Where Type="FEATURE_REEF"/>
				<Set InBorderHappiness="1"/>
			</Update>
			<Update>
				<Where Type="FEATURE_CRATER"/>
				<Set InBorderHappiness="2"/>
			</Update>
			<Update>
				<Where Type="FEATURE_FUJI"/>
				<Set InBorderHappiness="2"/>
			</Update>
			<Update>
				<Where Type="FEATURE_MESA"/>
				<Set InBorderHappiness="2"/>
			</Update>
			<Update>
				<Where Type="FEATURE_VOLCANO"/>
				<Set InBorderHappiness="2"/>
			</Update>
			<Update>
				<Where Type="FEATURE_GIBRALTAR"/>
				<Set InBorderHappiness="2"/>
			</Update>
			<Update>
				<Where Type="FEATURE_GEYSER"/>
				<Set InBorderHappiness="2"/>
			</Update>
			<Update>
				<Where Type="FEATURE_MT_SINAI"/>
				<Set InBorderHappiness="2"/>
			</Update>
			<Update>
				<Where Type="FEATURE_ULURU"/>
				<Set InBorderHappiness="2"/>
			</Update>
			<Update>
				<Where Type="FEATURE_POTOSI"/>
				<Set InBorderHappiness="2" OccurrenceFrequency="10"/>
			</Update>
			<Update>
				<Where Type="FEATURE_FOUNTAIN_YOUTH"/>
				<Set InBorderHappiness="2" AdjacentUnitFreePromotion="NULL" Help="NULL"/>
			</Update>
			<Update>
				<Where Type="FEATURE_EL_DORADO"/>
				<Set InBorderHappiness="2" FirstFinderGold="0" Help="NULL"/>
			</Update>
			<!-- My BNW additions -->
			<Update>
				<Where Type="FEATURE_LAKE_VICTORIA"/>
				<Set InBorderHappiness="2"/>
			</Update>
			<Update>
				<Where Type="FEATURE_KILIMANJARO"/>
				<Set InBorderHappiness="2"/>
			</Update>
			<Update>
				<Where Type="FEATURE_SOLOMONS_MINES"/>
				<Set InBorderHappiness="2"/>
			</Update>
		</Features>

		<!-- All natural wonders are balanced around a target number of 8 total yields alongside the happiness boost.  
		 The Reef is a bit less because it consists of 2 tiles (Though, is still more than simply half the yield
		 total of a regular natural wonder since it takes an extra citizen to work both tiles). Science is at 1/2 value -->
		<Feature_YieldChanges>
			<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
			<Update>
				<Where FeatureType="FEATURE_CRATER" YieldType="YIELD_SCIENCE"/>
				<Set Yield="8"/>
				<!-- +2 -->
			</Update>
			<Update>
				<Where FeatureType="FEATURE_CRATER" YieldType="YIELD_GOLD"/>
				<Set Yield="4"/>
				<!-- +2 -->
			</Update>
			<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
			<Update>
				<Where FeatureType="FEATURE_FUJI" YieldType="YIELD_FAITH"/>
				<Set Yield="2"/>
			</Update>
			<Update>
				<Where FeatureType="FEATURE_FUJI" YieldType="YIELD_CULTURE"/>
				<Set Yield="6"/>
			</Update>
			<Delete FeatureType="FEATURE_FUJI" YieldType="YIELD_GOLD"/>
			<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
			<Row FeatureType="FEATURE_MESA">
				<YieldType>YIELD_CULTURE</YieldType>
				<Yield>4</Yield>
			</Row>
			<Update>
				<Where FeatureType="FEATURE_MESA" YieldType="YIELD_GOLD"/>
				<Set Yield="2"/>
			</Update>
			<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
			<Row FeatureType="FEATURE_VOLCANO">
			<YieldType>YIELD_GOLD</YieldType>
			<Yield>4</Yield>
			</Row><!-- +4 -->
			<Update>
				<Where FeatureType="FEATURE_VOLCANO" YieldType="YIELD_SCIENCE"/>
				<Set Yield="8"/>
				<!-- +3 -->
			</Update>
			<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
			<Row FeatureType="FEATURE_GIBRALTAR">
				<YieldType>YIELD_PRODUCTION</YieldType>
				<Yield>2</Yield>
			</Row>
			<Update>
				<Where FeatureType="FEATURE_GIBRALTAR" YieldType="YIELD_GOLD"/>
				<Set Yield="4"/>
			</Update>
			<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
			<Row FeatureType="FEATURE_GEYSER">
				<YieldType>YIELD_CULTURE</YieldType>
				<Yield>2</Yield>
			</Row>
			<Row FeatureType="FEATURE_GEYSER">
				<YieldType>YIELD_GOLD</YieldType>
				<Yield>2</Yield>
			</Row>
			<Update>
				<Where FeatureType="FEATURE_GEYSER" YieldType="YIELD_SCIENCE"/>
				<Set Yield="8"/>
				<!-- +4 -->
			</Update>
			<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
			<Row FeatureType="FEATURE_POTOSI">
				<YieldType>YIELD_PRODUCTION</YieldType>
				<Yield>2</Yield>
			</Row>
			<Update>
				<Where FeatureType="FEATURE_POTOSI" YieldType="YIELD_GOLD"/>
				<Set Yield="6"/>
			</Update>
			<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
			<Row FeatureType="FEATURE_SRI_PADA">
				<YieldType>YIELD_CULTURE</YieldType>
				<Yield>2</Yield>
			</Row>
			<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
			<Row FeatureType="FEATURE_MT_SINAI">
				<YieldType>YIELD_CULTURE</YieldType>
				<Yield>2</Yield>
			</Row>
			<Update>
				<Where FeatureType="FEATURE_MT_SINAI" YieldType="YIELD_FAITH"/>
				<Set Yield="6"/>
			</Update>
			<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
			<Row FeatureType="FEATURE_MT_KAILASH">
				<YieldType>YIELD_CULTURE</YieldType>
				<Yield>4</Yield>
			</Row>
