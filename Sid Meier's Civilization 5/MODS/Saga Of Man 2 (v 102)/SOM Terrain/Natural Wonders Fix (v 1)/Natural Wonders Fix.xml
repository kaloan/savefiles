			</Row>
			<Update>
				<Where FeatureType="FEATURE_ULURU" YieldType="YIELD_FAITH"/>
				<Set Yield="4"/>
			</Update>
			<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
			<Update>
				<Where FeatureType="FEATURE_REEF" YieldType="YIELD_SCIENCE"/>
				<Set Yield="4"/>
				<!-- +1 -->
			</Update>
			<Update>
				<Where FeatureType="FEATURE_REEF" YieldType="YIELD_GOLD"/>
				<Set Yield="2"/>
				<!-- +1 -->
			</Update>
			<Delete FeatureType="FEATURE_REEF" YieldType="YIELD_PRODUCTION"/>
			<!-- Too many icons -->
			<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
			<Row FeatureType="FEATURE_FOUNTAIN_YOUTH">
